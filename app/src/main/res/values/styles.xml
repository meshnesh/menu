<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Splash.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TextAppearence.TextInputLayout.Primary" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBottomBorder</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Error_Appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/colorEditCancelUndoButtonLinks</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorAccent</item>
    </style>

    <style name="DatePickerDialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">  <!--// Theme.Material.Light.Dialog.Alert to get the properties for the original alertdialog-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>


        <item name="android:textSize">14sp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="signOutHEADER" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
